<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBemVindo">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBemVindo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btnImg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/jm_circle"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/jm_circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnImg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/jm_circle"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/jm_circle"
                    app:layout_constraintStart_toEndOf="@id/btnImg1"
                    app:layout_constraintTop_toTopOf="@id/btnImg1" />

                <ImageButton
                    android:id="@+id/btnImg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/jm_circle"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/jm_circle"
                    app:layout_constraintStart_toEndOf="@id/btnImg2"
                    app:layout_constraintTop_toTopOf="@id/btnImg2" />

                <ImageButton
                    android:id="@+id/btnImg4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/jm_circle"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/jm_circle"
                    app:layout_constraintStart_toEndOf="@id/btnImg3"
                    app:layout_constraintTop_toTopOf="@id/btnImg3" />

                <ImageButton
                    android:id="@+id/btnImg5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/jm_circle"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/jm_circle"
                    app:layout_constraintStart_toEndOf="@id/btnImg4"
                    app:layout_constraintTop_toTopOf="@id/btnImg4" />

                <ImageButton
                    android:id="@+id/btnImg6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/jm_circle"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/jm_circle"
                    app:layout_constraintStart_toEndOf="@id/btnImg5"
                    app:layout_constraintTop_toTopOf="@id/btnImg5" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME FRAGMENT" />

</FrameLayout>